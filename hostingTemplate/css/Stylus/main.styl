border_dark = #323436
bcg_dark = #32353A
bcg_grey = #F5F5F5
main_bcg = #1D1F21
theme_green = #3C9B27
text_grey = #8b8b8b
/*========================================================================*/
/*	HTML elements														  */
/*========================================================================*/

body 
	font-family: 'Roboto', sans-serif
	font-weight: 300
	font-size: 16pt
	line-height: 1.7em
	color: #000
	background-color: #FAFAFA
	display: block


ul 
	li 
		list-style: none
		a:hover
			color: theme_green

/*========================================================================*/
/*	Header    															  */
/*========================================================================*/

header 
	background-color: main_bcg
	color: #FFF

.contact_info,
.social_links 
	margin: 0
	li
		padding: 5px
		display: inline-block
		a
			color: #fff
			font-size: 9pt
			line-height: 0.5em
			letter-spacing: 0.2em
			padding: 0 0.5em
			vertical-align: middle	
			.fa
				margin-right: 0.7em
.contact_info 
	li
		border-left: 1px solid border_dark
		&:last-child 
			border-right: 1px solid border_dark

/*========================================================================*/
/*	Plans section														  */
/*========================================================================*/

.plans 
	background-color: bcg_grey
	color: text_grey
	padding: 3em 0
	font-size: 12pt
	.plan 
		height: 100%
		text-align: center
		background-color: #fff
		margin-bottom: 2em
		margin-right: 20px
		margin-left: 20px
		.plan_top 
			padding: 0.5em
			h3 
				font-size: 19pt
				font-weight: 500
				line-height: 1.5em
				color: theme_green
			p 
				font-size: 16pt
				font-weight: 500
				color: #000
				line-height: 1.1em
		.plan_bottom
			padding: 0 4em
			ul 
				li
					border-bottom: 1px solid bcg_grey
					padding: 0.5em
		.plan_button
			margin: 2.7em auto
			width: 50%
			background-color: #3c9b27
			padding: 0.6em 1.5em
			border-radius: 3px
			a 
				color: #FFF
				text-decoration: none
			&:hover 
				opacity: 0.8
				cursor: pointer

/*========================================================================*/
/*	Footer   															  */
/*========================================================================*/

footer
	background-color: bcg_dark
	color: text_grey
	padding-top: 2em
	font-size: 12pt

.footer_widget
	h3 
		font-weight: 500
		margin-bottom: 2em
		font-size: 16pt
		color: #FFF
	p 
		font-size: 12pt
		text-align: justify
		line-height: 1.5em
	ul 
		li
			padding-bottom: 0.5em
			a 
				color: text_grey
				&:hover
					color: theme_green
					text-decoration: none
			&:before 
				font-family: 'FontAwesome'
				content: "\f061"
				color: #3C9B27
				font-weight: bold
				margin-right: 0.5em
/*========================================================================*/
/*	Subscribe block 													  */
/*========================================================================*/

.email_block
	margin: 1em 0
	display: table
	border-collapse: separate
	span 
		display: table-cell
		width: 1%
		vertical-align: top
	input[type="email"] 
		background: #42454a
		border: medium none
		border-radius: 3px 0 0 3px
		color: #fff
		height: 3em
		padding-left: 1em
		width: 100%
		outline: none
	input[type="submit"] 
		background: #3C9B27
		color: #fff
		border: medium none
		border-radius: 0 3px 3px 0
		height: 3em
		width: 3em
		padding: 0
		vertical-align: middle

/*========================================================================*/
/*	Footer bottom  														  */
/*========================================================================*/

.footer_bottom 
	background-color: #1D1F21
	padding: 2em
	.social_wrap
		float: right
		li
			padding: 0

.copyright 
	font-size: 10pt

