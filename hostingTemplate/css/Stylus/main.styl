border_dark = #323436
border_light = #dfdfdf
bcg_dark = #32353A
bcg_grey = #F5F5F5
theme_green = #7dc01d
main_bcg_dark = #CFCFCF
main_bcg_light = #f3f3f3
text_grey = #8b8b8b
bcg_light = #FAFAFA
link_color = #4F4F4F
menu_dark = #33353D
/*========================================================================*/
/*	HTML elements														  */
/*========================================================================*/

body 
	font-family: 'Roboto', sans-serif
	font-weight: 300
	font-size: 16pt
	line-height: 1.7em
	color: #000
	background-color: bcg_light
	display: block
	overflow-x: hidden

a,
p
	font-family: 'Roboto', sans-serif
	font-weight: 300

ul 
	li 
		list-style: none
		a
			color: link_color
			&:hover
				color: theme_green
				text-decoration: none

/*========================================================================*/
/*	Header    															  */
/*========================================================================*/

header 
	background-color: main_bcg_dark
	color: #FFF

.contact_info,
.social_links 
	margin: 0
	li
		padding: 5px
		display: inline-block
		a
			font-size: 10pt
			line-height: 0.5em
			letter-spacing: 0.2em
			padding: 0 0.5em
			vertical-align: middle	
			.fa
				margin-right: 0.7em

/*========================================================================*/
/*	Navigation section: 												  */
/*========================================================================*/

.header_menu
	background-color: main_bcg_light
	height: 100%
	.logo
		height: 3.6em
		display: table
		padding-left: 1em
		a 
			font-size: 20pt
			color: menu_dark
			display: table-cell
			vertical-align: middle
			.fa 
				font-family: 'FontAwesome'
				font-size: 19pt
				color: theme_green
				margin-right: 0.5em
			&:hover
				text-decoration: none
	.show-menu
		padding: 10px 2em
		display: none
		float: right
		&:before 
			font-family: 'FontAwesome'
			content: "\f0c9"
			font-size: 20pt
			color: theme_green
			font-weight: bold
			margin-right: 0.5em
	input[type=checkbox]
		display: none
		-webkit-appearance: none
	input[type=checkbox]:checked ~ nav>ul
		display: block
	nav
		height: 100%
		.main_menu 
			height: inherit
			> li 
				display: inline-block
				float: left
				height: inherit
				position: relative
				> a:hover 
					background-color: #42454A
					color: #FFF
					text-decoration: none
				> a 
					display: table-cell
					height: inherit
					color: menu_dark
					padding: 0 1em
					font-size: 15pt
					font-weight: 300
					line-height: 2.5em
					text-align: center
					border-right: 1px solid border_light
					vertical-align: middle
					span:after 
						width: 0
						height: 0
						border: 0.313em solid transparent
						border-bottom: none
						border-top-color: theme_green
						content: ''
						vertical-align: middle
						display: inline-block
						position: relative
						right: -0.313em
				&:first-child > a 
					border-left: 1px solid border_light
			li 
				ul 
					background-color: #42454A
					display: none
					position: absolute
					top: 97%
					li a:hover
					&:not(:hover) li:active a
						background-color: #FFF
						color: menu_dark
					a 	
						display: block
						width: 100%
						color: #FFF
						font-size: 13pt
						font-weight: 300
						height: inherit
						border-top: 1px solid border_dark
						line-height: 2.5em
						padding: 0 1em
						text-decoration: none
				&:hover ul 
					display: block
					width: 100%
					z-index: 100

/*========================================================================*/
/*	Slider section: ;													  */
/*========================================================================*/

.flexslider
	border: none !important
	margin-bottom: 0 !important
	img 
		position: relative
	.text_wrap 
		position: absolute
		width: 100%
		text-align: center
		top: 40%
		.text
			background-color: rgba(0,0,0,0.6)
			width: 65%
			margin: auto
			padding: 0.5em 1em 1em 1em
			h1 
				font-size: 26pt
				font-weight: 500
				line-height: 1.5em
				margin-bottom: 0.7em
				color: #FFF
			p 
				font-size: 19pt
				font-weight: 500
				color: #000
				line-height: 1.1em
				color: #FFF
	.flex-control-nav
		bottom: 5%
		z-index: 10
		li 
			a
				background: bcg_dark
			.flex-active
				background: theme_green
	.flex-direction-nav 
		a.flex-prev:before 
			font-family: 'FontAwesome'
			content: '\f053'
			color: #fff
		a.flex-next:before 
			font-family: 'FontAwesome'
			content: '\f054'
			color: #fff

/*========================================================================*/
/*	Features section													  */
/*========================================================================*/

.features 
	background-color: bcg_light
	color: text_grey
	padding: 3em 0
	font-size: 12pt
	h3
		text-align: center
		margin-bottom: 2em
	.feature_left,
	.feature_right
		h4
			font-size: 14pt
			line-height: 1.5em
			margin-bottom: 1em
			color: #333
		p
			line-height: 1.3em	
		span
			margin: 0.5em 0 1em 0
			text-align: center
			color: #FFF
			i
				font-size: 1.1em
				background-color: theme_green
				border-radius: 100%
				height: 3.5em
				width: 3.5em
				line-height: 3.5em
				display: block
				font-size: 1.75em
				position: relative
				text-align: center
				top: 0
				-webkit-transition:all 200ms ease-in
				-o-transition:all 200ms ease-in
				-moz-transition:all 200ms ease-in
				transition:all 200ms ease-in
				&:hover
					background-color: bcg_dark
					-webkit-transition:all 200ms ease-in
					-o-transition:all 200ms ease-in
					-moz-transition:all 200ms ease-in
					transition:all 200ms ease-in
	.feature_left,
	.feature_left
		h4, p
			text-align: right
			font-family: 'Roboto', sans-serif
		h4
			font-weight: 500
		p
			font-weight: 300
	.feature_left 
		span 
			margin-left: 2em
			float: right
	.feature_right 
		span 
			margin-right: 2em
			float: left

/*========================================================================*/
/*	Plans section														  */
/*========================================================================*/

.plans 
	background-color: main_bcg_light
	color: text_grey
	padding: 3em 0
	font-size: 12pt
	h3
		text-align: center
		margin-bottom: 2em
	.plan 
		height: 100%
		text-align: center
		background-color: #fff
		margin-bottom: 2em
		margin-right: 20px
		margin-left: 20px
		.plan_top 
			padding: 0.5em
			h3 
				font-family: 'Roboto', sans-serif
				font-size: 19pt
				font-weight: 500
				line-height: 1.5em
				color: #000
			p 
				font-family: 'Roboto', sans-serif
				font-size: 25pt
				font-weight: 500
				line-height: 1.1em
				color: theme_green
		.plan_bottom
			margin-top: 1em
			padding: 0 4em
			ul 
				li
					border-bottom: 1px solid bcg_grey
					padding: 1em 0
		.plan_button
			margin: 2.7em auto
			width: 50%
			background-color: theme_green
			padding: 0.6em 1.5em
			border-radius: 3px
			-webkit-transition:all 200ms ease-in
			-o-transition:all 200ms ease-in
			-moz-transition:all 200ms ease-in
			transition:all 200ms ease-in
			a 
				color: #FFF
				text-decoration: none
			&:hover 
				background-color: bcg_dark
				-webkit-transition:all 200ms ease-in
				-o-transition:all 200ms ease-in
				-moz-transition:all 200ms ease-in
				transition:all 200ms ease-in
				cursor: pointer

/*========================================================================*/
/*	Reviews section														  */
/*========================================================================*/

.reviews
	background-color: bcg_light
	color: text_grey
	padding: 3em 0
	font-size: 12pt
	h3
		text-align: center
		margin-bottom: 2em
	.slides
		width: 50%
		margin: auto
		.review
			.comment
				background-color: main_bcg_dark
				padding: 1.5em
				text-align: justify
				position: relative
				margin: 0 1em
				.fa
					text-align: left
					position: absolute
					left: 8%
					top: 10%
				blockquote
					border: none
					margin: 0
				&:after
					content: ""
					position: absolute
					border-top: 7px solid main_bcg_dark
					border-left: 7px solid transparent
					border-bottom: 7px solid transparent
					border-right: 7px solid transparent
					bottom: -13px
					left: 12%
			.comment_info
				text-align: left
				width: 30%
				display: inline-block
				margin: 1em 0 0 1em 
				img
					width: 80%
			.client_info
				display: inline-block
		.owl-controls
			position: absolute
			right: 2%
			bottom: 31%
			.owl-page
				span
					background: bcg_dark
			.owl-page.active
				span
					background: theme_green
				
			
	
		
/*========================================================================*/
/*	Blog posts section													  */
/*========================================================================*/

.blog_posts 
	background-color: main_bcg_light
	color: text_grey
	padding: 3em 0
	font-size: 12pt
	min-height: 500px
	.title
		text-align: center
		margin-bottom: 3em
		h3 
			font-size: 20pt
			letter-spacing: 0.2em
			color: #252525
	.blog_post
		height: 100%
		background-color: #fff
		margin-bottom: 3em
		figure 
			margin-bottom: 0.7em
			img 
				width: 100%
				height: auto
		.post 
			margin: 1em 0
			padding: 0 2em
			h4 
				text-align: center
				font-size: 14pt
				line-height: 1.5em
				margin-bottom: 1em
			p 
				text-align: justify
				line-height: 1.5em
				padding-bottom: 1em
			.post_footer 
				height: 1em
				a 
					font-size: 9pt
					color: #000
					&:hover
						text-decoration: none
				i 
					font-family: 'FontAwesome'
					font-size: 9pt
					color: theme_green
					margin-right: 0.5em
					&:hover
						text-decoration: none

/*========================================================================*/
/*	Footer   															  */
/*========================================================================*/

footer
	background-color: bcg_dark
	color: text_grey
	padding-top: 2em
	font-size: 12pt

.footer_widget
	h3 
		font-weight: 500
		margin-bottom: 2em
		font-size: 16pt
		color: #FFF
	p 
		font-size: 12pt
		text-align: justify
		line-height: 1.5em
	ul 
		li
			padding-bottom: 0.5em
			a 
				color: text_grey
				&:hover
					color: theme_green
					text-decoration: none
			&:before 
				font-family: 'FontAwesome'
				content: "\f061"
				color: theme_green
				font-weight: bold
				margin-right: 0.5em
.support
	margin-left: 1em
/*========================================================================*/
/*	Subscribe block 													  */
/*========================================================================*/

.email_block
	margin: 1em 0
	display: table
	border-collapse: separate
	span 
		display: table-cell
		width: 1%
		vertical-align: top
	input[type="email"] 
		background: #42454a
		border: medium none
		border-radius: 3px 0 0 3px
		color: #fff
		height: 3em
		padding-left: 1em
		width: 100%
		outline: none
	input[type="submit"] 
		background: theme_green
		color: #fff
		border: medium none
		border-radius: 0 3px 3px 0
		height: 3em
		width: 3em
		padding: 0
		vertical-align: middle

/*========================================================================*/
/*	Footer bottom  														  */
/*========================================================================*/

.footer_bottom 
	background-color: #1D1F21
	padding: 2em
	.social_wrap
		float: right
		li
			padding: 0

.copyright 
	font-size: 10pt
	a
		color: link_color
		font-weight: 500
		&:hover
			color: theme_green
			text-decoration: none


