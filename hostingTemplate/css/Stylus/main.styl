border_dark = #323436
main_bcg = #1D1F21
theme_green = #3C9B27
/*========================================================================*/
/*	HTML elements														  */
/*========================================================================*/

body 
	font-family: 'Roboto', sans-serif
	font-weight: 300
	font-size: 16pt
	line-height: 1.7em
	color: #000
	background-color: #FAFAFA
	display: block


ul li 
	list-style: none

a 
	color: #FFF
	text-decoration: none

/*========================================================================*/
/*	Header    															  */
/*========================================================================*/

header 
	background-color: main_bcg
	color: #FFF

.contact_info,
.social_links 
	margin: 0
	li
		padding: 5px
		display: inline-block
		a
			color: #fff
			font-size: 9pt
			line-height: 0.5em
			letter-spacing: 0.2em
			padding: 0 0.5em
			vertical-align: middle	
			&:hover
				color: #3C9B27
			.fa
				margin-right: 0.7em
.contact_info 
	li
		border-left: 1px solid border_dark
		&:last-child 
			border-right: 1px solid border_dark

/*========================================================================*/
/*	Footer bottom  														  */
/*========================================================================*/

.footer_bottom 
	background-color: #1D1F21
	padding: 2em
	.social_wrap
		float: right
		li
			padding: 0

.copyright 
	font-size: 10pt

