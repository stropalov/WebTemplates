border_dark = #323436
bcg_dark = #32353A
main_bcg = #1D1F21
theme_green = #3C9B27
text_grey = #8b8b8b
/*========================================================================*/
/*	HTML elements														  */
/*========================================================================*/

body 
	font-family: 'Roboto', sans-serif
	font-weight: 300
	font-size: 16pt
	line-height: 1.7em
	color: #000
	background-color: #FAFAFA
	display: block


ul 
	li 
		list-style: none
		a:hover
			color: theme_green
a 
	color: #FFF
	text-decoration: none

/*========================================================================*/
/*	Header    															  */
/*========================================================================*/

header 
	background-color: main_bcg
	color: #FFF

.contact_info,
.social_links 
	margin: 0
	li
		padding: 5px
		display: inline-block
		a
			color: #fff
			font-size: 9pt
			line-height: 0.5em
			letter-spacing: 0.2em
			padding: 0 0.5em
			vertical-align: middle	
			.fa
				margin-right: 0.7em
.contact_info 
	li
		border-left: 1px solid border_dark
		&:last-child 
			border-right: 1px solid border_dark

/*========================================================================*/
/*	Footer   															  */
/*========================================================================*/

footer
	background-color: bcg_dark
	color: text_grey
	padding-top: 2em
	font-size: 12pt

.footer_widget
	h3 
		font-weight: 500
		margin-bottom: 2em
		font-size: 16pt
		color: #FFF
	p 
		font-size: 12pt
		text-align: justify
		line-height: 1.5em
	ul 
		li
			padding-bottom: 0.5em
			a 
				color: text_grey
				&:hover
					color: theme_green
					text-decoration: none
			&:before 
				font-family: 'FontAwesome'
				content: "\f061"
				color: #3C9B27
				font-weight: bold
				margin-right: 0.5em

/*========================================================================*/
/*	Footer bottom  														  */
/*========================================================================*/

.footer_bottom 
	background-color: #1D1F21
	padding: 2em
	.social_wrap
		float: right
		li
			padding: 0

.copyright 
	font-size: 10pt

